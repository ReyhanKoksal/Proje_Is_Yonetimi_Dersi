Imports System.Data.SqlClient

Public Class senet
    Private senet_o_no As Integer
    Private kurs_ucreti As Integer
    Private indirim As Integer
    Private top_s_tutari As Integer
    Private tarih As String
    Private ilk_vade_tarihi As String
    Private vade_sayisi As Integer
    Private tutari As Double

    Private no As Integer
    Private ad As String
    Private soyad As String
    
    Private sql As String
    Private baglanti As New SqlConnection("server=.\SQLEXPRESS; database=proje_dershane; trusted_connection=yes;")
    Private com As New SqlCommand()
    
    
    Sub baglan()
        com.Connection = baglanti
        com.CommandText = sql
        baglanti.Open()
        com.ExecuteReader()
        baglanti.Close()
    End Sub
    
    Sub listele()
        sql = "select * from senet_tbl"
        Dim adapt As New SqlDataAdapter(sql, baglanti)
        Dim ds As New DataSet()
        adapt.Fill(ds, "senet_liste")
        ogrenci_frm.senet_grd.DataSource = ds.Tables("senet_liste")
        ogrenci_frm.senet_grd.Refresh()
        
    ogrenci_frm.senet_grd.Columns(0).HeaderText = "Ögrenci Numarası"
        ogrenci_frm.senet_grd.Columns(1).HeaderText = "Kurs Ücreti"
        ogrenci_frm.senet_grd.Columns(2).HeaderText = "İndirim"
        ogrenci_frm.senet_grd.Columns(3).HeaderText = "Toplam Tutar"
        ogrenci_frm.senet_grd.Columns(4).HeaderText = "Senet Ödeme Tarihi"
        ogrenci_frm.senet_grd.Columns(5).HeaderText = "Senet Numarası"
        ogrenci_frm.senet_grd.Columns(6).HeaderText = "Kayıt Tarihi"
        ogrenci_frm.senet_grd.Columns(7).HeaderText = "Vade Sayısı"
        ogrenci_frm.senet_grd.Columns(8).HeaderText = "Aylık Ödeme Miktarı"
        ogrenci_frm.senet_grd.Columns(9).HeaderText = "Ödenme Durumu"
        
                
    End Sub
    
    Sub guncelle()
        sql = "update senet_tbl set kurs_ucreti='" & kurs_ucreti & "', indirim='" & indirim & "', top_s_tutari='" & top_s_tutari & "', tarihi='" & tarih & "', ilk_vade_tarihi='" & ilk_vade_tarihi & "', vade_sayisi='" & vade_sayisi & "', tutari='" & tutari & "' where numarasi ogr_no = '" & senet_o_no & "'"
        baglan()
        listele()
    End Sub
    
    Sub ara()
        sql = "select * from senet_tbl where ogr_no = '" & senet_o_no & "'"
        Dim adapt As New SqlDataAdapter(sql, baglanti)
        Dim ds As New DataSet()
        adapt.Fill(ds, "SenetBilgileri")
        ogrenci_frm.senet_grd.DataSource = ds.Tables("SenetBilgileri")
        ogrenci_frm.senet_grd.Refresh()

    End Sub
     Sub temizle()
        ogrenci_frm.senet_ogr_no_txt.Text = ""
        ogrenci_frm.senet_k_ucret_txt.Text = ""
        ogrenci_frm.senet_indirim_txt.Text = ""
        ogrenci_frm.senet_vadesay_txt.Text = ""
     End Sub
    
    
     Sub sil()
        sql = "delete from senet_tbl where ogr_no = '" & senet_o_no & "'"
        baglan()
        listele()
    End Sub
    
    Sub ekle()
        For i = 1 To vade_sayisi
            Dim durum As String = "ödenmedi"
            tarih = CStr(CDate(tarih).Date.AddMonths(1))
            sql = "INSERT INTO senet_tbl(ogr_no,kurs_ucreti,indirim,top_s_tutari,tarihi,ilk_vade_tarihi,vade_sayisi,tutari,senet_no,durum) values ('" & senet_o_no & "','" & kurs_ucreti & "','" & indirim & "','" & top_s_tutari & "','" & tarih & "','" & ilk_vade_tarihi & "','" & vade_sayisi & "','" & tutari & "','" & i & "','" & durum & "')"
            baglan()
            listele()
        Next i

    End Sub
    
    Sub textaktar()
       Try
            sql = "SELECT * from ogrenci_sicil_tbl WHERE numarasi = " & senet_o_no & ""
            Dim satir1 As DataRow
            Dim adapt As New SqlDataAdapter(sql, baglanti)
            Dim ds As New DataSet("ds")
            adapt.Fill(ds, "ogrenci")
            satir1 = ds.Tables("ogrenci").Rows(0)
            ad = satir1("adi").ToString
            ogrenci_frm.senet_ogr_ad_txt.Text = ad
            ogrenci_frm.senet_ogr_soyad_txt.Text = soyad
        Catch
            ogrenci_frm.senet_ogr_ad_txt.Text = ""
            ogrenci_frm.senet_ogr_soyad_txt.Text = ""
            MsgBox("Lütfen geçerli değerler giriniz!")
            ogrenci_frm.senet_ogr_no_txt.Focus()
        Finally
            baglan()
        End Try
    End Sub
    
    
     Sub kontrol()
        ogrenci_frm.s_bilgi_ata()
        no = CInt(ogrenci_frm.senet_ogr_no_txt.Text)
        sql = "select * from senet_tbl where ogr_no = '" & no & "'"
        baglan()
        Dim satir1 As DataRow
        Dim adapt As New SqlDataAdapter(sql, baglanti)
        Dim ds As New DataSet("ds")
        adapt.Fill(ds, "Kontrol")
        Try
            satir1 = ds.Tables("Kontrol").Rows(0)
            MsgBox("Bu öğrenciye düzenlenmiş bir senet zaten var!")
            ogrenci_frm.senet_ogr_no_txt.Focus()
        Catch
            ekle()
        End Try
        
 
    End Sub
    
    
    Public Property senet_ogr_nosu()
        Get
            Return senet_o_no
        End Get
        Set(ByVal value)
            senet_o_no = value
        End Set
    End Property
    Public Property k_ucreti()
        Get
            Return kurs_ucreti
        End Get
        Set(ByVal value)
            kurs_ucreti = value
        End Set
    End Property
    Public Property v_sayisi()
        Get
            Return vade_sayisi
        End Get
        Set(ByVal value)
            vade_sayisi = value
        End Set
    End Property
    Public Property senet_indirimi()
        Get
            Return indirim
        End Get
        Set(ByVal value)
            indirim = value
        End Set
    End Property
    Public Property i_v_tarihi()
        Get
            Return ilk_vade_tarihi
        End Get
        Set(ByVal value)
            ilk_vade_tarihi = value
        End Set
    End Property
    Public Property tarihi()
        Get
            Return tarih
        End Get
        Set(ByVal value)
            tarih = value
        End Set
    End Property
    Public Property top_senet_tutari()
        Get
            Return top_s_tutari
        End Get
        Set(ByVal value)
            top_s_tutari = value
        End Set
    End Property
    Public Property tutar()
        Get
            Return tutari
        End Get
        Set(ByVal value)
            tutari = value
        End Set
    End Property
End Class


